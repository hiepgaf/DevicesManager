<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/slider_bar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <comboseekbar.ComboSeekBar xmlns:cbs="http://schemas.android.com/apk/res-auto"
        android:id="@+id/freqs_slider_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cbs:multiline="true"
        cbs:myColor="@color/sliderbar_light"
        cbs:textSize="12sp"
        cbs:theme="@style/ActionBarStyle" />
</LinearLayout>