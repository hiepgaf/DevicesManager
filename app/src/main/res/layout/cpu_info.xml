<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hieptran.devices.info.CpuInfoActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <TextView
            style="@style/header_style"
            android:text="@string/kernel_info_title" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/kernel_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/splashview_textsize" />

        <TextView
            style="@style/header_style"
            android:text="@string/cpu_info_title" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/default_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/splashview_textsize" />
    </LinearLayout>
</ScrollView>
