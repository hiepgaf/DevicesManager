<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
android:padding="@dimen/card_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <LinearLayout
    android:id="@+id/main_frofile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:clickable="false"
        >

        <TextView
            style="@style/header_style"
            android:text="Available Profiles" />

        <ListView
            android:id="@+id/avai_profiles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:choiceMode="singleChoice"></ListView>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/right_labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/more_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/avai_profiles"
            fab:fab_addButtonColorNormal="@color/cpu_usage_lower_bg_dark"
            fab:fab_addButtonColorPressed="@color/white_pressed"
            fab:fab_addButtonPlusIconColor="@color/half_black"
            app:fab_labelStyle="@style/header_style"
            fab:fab_addButtonSize="mini"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/cpu_usage_lower_bg_dark"
                android:id="@+id/action_add_prf"
                fab:fab_title="Add"
                fab:fab_size="mini"
                android:src="@android:drawable/ic_menu_add"
                fab:fab_colorPressed="@color/white_pressed"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/cpu_usage_lower_bg_dark"
                android:id="@+id/action_edit_prf"
                fab:fab_title="Edit"
                fab:fab_size="mini"
                android:src="@android:drawable/ic_menu_edit"
                fab:fab_colorPressed="@color/white_pressed"/>
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/cpu_usage_lower_bg_dark"
                android:id="@+id/action_delete_prf"
                fab:fab_title="Delete"
                fab:fab_size="mini"
                android:src="@android:drawable/ic_menu_delete"
                fab:fab_colorPressed="@color/white_pressed"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </LinearLayout>
</LinearLayout>